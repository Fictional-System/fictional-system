#!/bin/sh

dir=$(dirname $(dirname "$0"))
prefix="localhost/fs"

fs_build()
{
  build=0
  image_name=""
  image_tag=""
  image_args=""
  while IFS="=" read -r key value
  do
    if [ "${key}" = "name" ]
    then
      image_name="$value"
    elif [ "${key}" = "tag" ]
    then
      image_tag="$value"
    elif [ "${key}" = "argument" ]
    then
      IFS=" " read -r argKey argValue <<< $value
      image_args="${image_args} --build-arg ${argKey}=${argValue}"
    elif [ "${key}" = "build" ]
    then
      quiet="-q"
      if [ "${1}" = "dev" ]
      then
        quiet=""
      fi

      cmd="podman build ${quiet} -t ${prefix}/${image_name}:${image_tag} ${image_args} -f ${dir}/${image_name}/Containerfile ${dir}/${image_name}/cache"

      echo "Building ${image_name}:${image_tag}"
      if [ "${1}" = "dev" ]
      then
        echo $cmd
      fi
      $cmd
      LAST_COMMAND=$?
      
      if [ $LAST_COMMAND -ne 0 ]
      then
        exit $LAST_COMMAND
      fi
      echo "Done."
      echo ""

      image_name=""
      image_tag=""
      image_args=""
      build=$((build+1))
    fi
  done < ${dir}/"build.cache"

  if [ $build -gt 0 ]
  then
    echo "${build} components built."
    fs script all
    chmod +x ${dir}/bin/*
    echo ""
    echo "Enjoy your FS :)"
  fi
}

name="localhost/fs/fs/fs"

podman run --rm -it --userns=keep-id --name fs_dev_$$ -v ${dir}:/app:z ${name} php /usr/local/bin/fs.phar $*
LAST_COMMAND=$?

if [ "$1" = "build" ]
then
  if [ $LAST_COMMAND -eq 0 ]
  then
    fs_build $2
  fi
fi
